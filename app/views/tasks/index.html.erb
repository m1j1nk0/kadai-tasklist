<h1>タスク一覧</h1>


<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>タスク</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.id, task %></td>
      <td><%= task.content %></td>
      <td><%= task.status %></td>
    </tr>
  <% end %>
  </tbody>
</table>

